<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="20dp"
        android:background="@drawable/white_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_update_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="70dp"
            android:textColor="@color/gray_333333"
            android:text="@string/update_dia_title"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_update_later"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/gray_999999"
            android:text="@string/tips_dia_cancel"
            android:layout_marginTop="20dp"
            android:paddingVertical="10dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:background="@drawable/grey_6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_update_now"
            app:layout_constraintTop_toBottomOf="@id/tv_update_content"/>

        <TextView
            android:id="@+id/tv_update_now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/tips_dia_confirm"
            android:textColor="@color/gray_532e00"
            android:layout_marginTop="20dp"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:background="@drawable/yellow_6"
            app:layout_constraintStart_toEndOf="@id/tv_update_later"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_update_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_update"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/shengji"
        android:layout_marginTop="-25dp"
        app:layout_constraintTop_toTopOf="@id/container_update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>