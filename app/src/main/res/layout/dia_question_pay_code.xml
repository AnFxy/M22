<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="20dp"
        android:paddingTop="25dp"
        android:paddingBottom="20dp"
        android:background="@drawable/white_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dia_question_pay_code"/>

        <TextView
            android:id="@+id/tv_i_know"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dia_cus_know"
            android:background="@drawable/yellow_8"
            android:layout_marginTop="20dp"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="5dp"
            android:gravity="center"
            android:textColor="@color/gray_532e00"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>