<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/container_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_10"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="end"
            android:src="@mipmap/chahao"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="52dp"
            android:textColor="@color/gray_333333"
            android:text="Casi terminado, el más alto $30,000, ¿está seguro de que quiere abandonar ahora?"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:paddingVertical="11dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/gray_532e00"
            android:text="@string/continuar"
            android:gravity="center"
            android:background="@drawable/yellow_8"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/tv_abandonar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:paddingVertical="11dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/abandon"
            android:textColor="@color/gray_999999"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/nanguo"
        android:layout_marginBottom="-35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/container_auth" />

</androidx.constraintlayout.widget.ConstraintLayout>