<resources>
    <!-- Base application theme. -->
    <style name="Theme.M_17" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/transparent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <!--App 主题风格-->
    <style name="mine_app_theme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="colorPrimary">@color/yellow_fdd045</item>
        <item name="colorPrimaryDark">@color/yellow_fdd045</item>
        <item name="colorAccent">@color/yellow_fdd045</item>
        <item name="android:windowBackground">@color/gray_f9f9f9</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--通用Dialog样子-->
    <style name="SimpleDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="SimpleToolbarTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_333333</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>